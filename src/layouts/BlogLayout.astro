---
import BaseLayout from '../layouts/BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';

interface Props {
title: string;
description: string;
pubDate: Date;
heroImage?: string;
category?: string;
}

const { title, description, pubDate, heroImage, category } = Astro.props;
---

<BaseLayout>
  <article class="px-6 md:px-12 lg:px-24 py-12 max-w-4xl mx-auto">
    <!-- Header -->
    <header class="mb-10">
      {category && (
      <span
        class="inline-block px-3 py-1 text-xs font-mono uppercase tracking-wider bg-orange/20 text-orange rounded mb-4">
        {category}
      </span>
      )}
      <h1 class="text-4xl md:text-5xl font-bold text-black leading-tight mb-6">
        {title}
      </h1>
      <p class="text-xl text-black/70 leading-relaxed mb-4">
        {description}
      </p>
      <time class="text-sm text-black/50 font-mono">
        <FormattedDate date={pubDate} />
      </time>
    </header>

    <!-- Content -->
    <div class="blog-content">
      <slot />
    </div>

    <!-- Back link -->
    <div class="mt-16 pt-8 border-t border-black/10">
      <a href="/projects" class="text-orange hover:underline font-mono text-sm">
        ‚Üê Back to Projects
      </a>
    </div>
  </article>
</BaseLayout>

<style is:global>
  .blog-content {
    color: #2d2d2d;
    font-size: 1.125rem;
    line-height: 1.8;
  }

  /* Headings */
  .blog-content h2 {
    font-size: 1.875rem;
    font-weight: 700;
    color: #2d2d2d;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #e85a4f;
  }

  .blog-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2a9d8f;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .blog-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2d2d2d;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  /* Paragraphs */
  .blog-content p {
    margin-bottom: 1.5rem;
    color: #2d2d2d;
  }

  /* Links */
  .blog-content a {
    color: #2a9d8f;
    text-decoration: none;
    border-bottom: 1px solid transparent;
  }

  .blog-content a:hover {
    border-bottom-color: #2a9d8f;
  }

  /* Strong and emphasis */
  .blog-content strong {
    color: #2d2d2d;
    font-weight: 600;
  }

  .blog-content em {
    font-style: italic;
    color: #7c6a9e;
  }

  /* Lists */
  .blog-content ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .blog-content ol {
    list-style-type: decimal;
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .blog-content li {
    margin-bottom: 0.5rem;
    color: #2d2d2d;
  }

  .blog-content li::marker {
    color: #e85a4f;
  }

  /* Inline code */
  .blog-content code:not(pre code) {
    background: rgba(42, 157, 143, 0.15);
    color: #2a9d8f;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'Geist Mono', monospace;
  }

  /* Code blocks */
  .blog-content pre {
    background: #2d2d2d;
    border: 1px solid rgba(232, 90, 79, 0.3);
    border-radius: 8px;
    padding: 1.25rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  .blog-content pre code {
    background: none;
    color: #faf8f5;
    padding: 0;
    font-family: 'Geist Mono', monospace;
  }

  /* Blockquotes */
  .blog-content blockquote {
    border-left: 4px solid #7c6a9e;
    background: rgba(124, 106, 158, 0.1);
    padding: 1rem 1.25rem;
    margin: 1.5rem 0;
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: #2d2d2d;
  }

  /* Tables */
  .blog-content table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .blog-content th {
    background: rgba(232, 90, 79, 0.1);
    border: 1px solid rgba(232, 90, 79, 0.3);
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: 600;
    color: #e85a4f;
  }

  .blog-content td {
    border: 1px solid rgba(45, 45, 45, 0.15);
    padding: 0.75rem 1rem;
    color: #2d2d2d;
  }

  .blog-content tr:nth-child(even) td {
    background: rgba(42, 157, 143, 0.05);
  }

  /* Horizontal rule */
  .blog-content hr {
    border: none;
    border-top: 2px solid #e85a4f;
    margin: 2.5rem 0;
  }

  /* Images */
  .blog-content img {
    max-width: 100%;
    border-radius: 8px;
    margin: 1.5rem 0;
    border: 1px solid rgba(232, 90, 79, 0.2);
  }

  /* KaTeX math styling */
  .blog-content .katex {
    color: #e9c46a;
  }

  .blog-content .katex-display {
    margin: 1.5rem 0;
    padding: 1rem;
    background: rgba(233, 196, 106, 0.1);
    border-radius: 8px;
    overflow-x: auto;
  }
</style>