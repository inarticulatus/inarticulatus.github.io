---
import SectionTitle from "../assets/SectionTitle.astro";

const skills = [
  {
    category: "Core",
    items: ["Python", "SQL", "Apache Spark", "Kafka", "Flink", "Airflow"]
  },
  {
    category: "Cloud & Infrastructure",
    items: ["AWS (S3, Redshift, Glue)", "Docker", "Kubernetes", "Terraform", "Git & CI/CD"]
  },
  {
    category: "Data & Analytics",
    items: ["Data Modeling", "dbt", "Vector DBs (Qdrant)", "Redis", "Power BI"]
  },
  {
    category: "AI & LLM",
    items: ["LangChain", "Sentence-Transformers", "FastAPI", "RAGAS Evaluation"]
  }
];
---

<section class="border-black/20 border-b divide-y divide-black/20">
  <SectionTitle>
    Expertise
  </SectionTitle>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 divide-y md:divide-y-0 md:divide-x divide-black/20">
    {skills.map((skill) => (
      <div class="p-8">
        <!-- Category -->
        <h3 class="text-orange font-mono text-sm uppercase tracking-wider mb-4">
          {skill.category}
        </h3>
        
        <!-- Skills list -->
        <ul class="space-y-2">
          {skill.items.map((item) => (
            <li class="text-black text-sm font-medium flex items-center gap-2">
              <span class="w-1.5 h-1.5 bg-cyan rounded-full"></span>
              {item}
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
