  </div>

  <div class="p-8">
    {
      services.map(({ title, description, time, company }) => (
        <Timeline>
            {/* <p class="text-md font-black text-white"><span class="bg-eagle">{company}</span></p>           */}
            <h3 class="text-lg uppercase font-black text-white">{title}</h3>
            <p class="text-md uppercase font-black text-eagle">{time}</p>
            {/* <p class="mt-3 text-white">{description}</p> */}
        </Timeline>

      ))
    }
    <span class="relative z-10 grid h-3 w-3 place-items-center rounded-full bg-eagle"></span>
  </div>
</section>
