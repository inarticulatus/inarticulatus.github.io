import Timeline from "../assets/Timeline.astro";

const services = [
   {
    title: "Data Scientist",
    time: "Jan 2025",
    company: "RiskPe",
    description: " Blehh "
  },

  {
    title: "Computer Vision Engineer",
    time: "July 2024",
